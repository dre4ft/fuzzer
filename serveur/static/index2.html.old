<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Tester - Postman-like (Bootstrap)</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Icons (Bootstrap Icons) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body { background-color: #f5f5f5; height: 100vh; margin: 0; display: flex; flex-direction: column; justify-content:right ;}
        .history-panel {
            background: #fff;
            border-right: 1px solid #dee2e6;
            overflow-y: auto;
            height: 100vh;
            
        }
        .history-item {
            padding: 10px 15px;
            cursor: pointer;
            border-bottom: 1px solid #eee;
            font-size: 0.9rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .history-item:hover { background-color: #f8f9fa; }
        .history-item .method {
            font-weight: bold;
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 0.75rem;
            color: white;
        }
        .method-get { background: #0d6efd; }
        .method-post { background: #198754; }
        .method-put { background: #ffc107; color: black; }
        .method-delete { background: #dc3545; }
        .method-patch { background: #0dcaf0; color: black; }

        .request-panel, .response-panel {
            background: white;
            height: 50vh;
            overflow-y: auto;
            width: 100;
        }
        .request-panel { border-bottom: 1px solid #dee2e6; }
        .response-panel pre {
            background: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 6px;
            padding: 15px;
            margin: 0;
            white-space: pre-wrap;
        }
        .nav-tabs .nav-link.active {
            border-bottom: 3px solid #ff6c37;
            font-weight: 600;
        }
        .table th, .table td { vertical-align: middle; }
        .remove-row { color: #dc3545; cursor: pointer; font-size: 1.2rem; }
        #send-btn {
            background: #ff6c37;
            border: none;
            font-weight: 600;
        }
        #send-btn:hover { background: #e55a2b; }
    </style>
</head>
<body>

<div class="container-fluid h-100 p-0">
    <div class="row h-100 g-0">

        <!-- Colonne Historique (1/3) -->
        <div class="col-lg-4 col-xxl-2 history-panel">
            <div class="p-3 border-bottom">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Historique</h5>
            </div>
            <div id="history"></div>
        </div>

        <!-- Colonne Principale (2/3) -->
        <div class="col-lg-8 col-xxl-10 d-flex flex-column">

            <!-- Partie Requête (50%) -->
            <div class="request-panel p-4">
                <div class="d-flex gap-3 mb-4 align-items-center flex-wrap">
                    <select id="method" class="form-select w-auto">
                        <option>GET</option>
                        <option>POST</option>
                        <option>PUT</option>
                        <option>DELETE</option>
                        <option>PATCH</option>
                    </select>
                    <input type="text" id="url" class="form-control flex-grow-1" 
                           placeholder="https://api.example.com/endpoint"
                           value="https://jsonplaceholder.typicode.com/posts/1">
                    <button id="send-btn" class="btn btn-primary px-5">Send</button>
                </div>

                <!-- Onglets -->
                <ul class="nav nav-tabs mb-3" id="requestTabs">
                    <li class="nav-item"><a class="nav-link active" data-tab="params">Params</a></li>
                    <li class="nav-item"><a class="nav-link" data-tab="authorization">Authorization</a></li>
                    <li class="nav-item"><a class="nav-link" data-tab="headers">Headers</a></li>
                    <li class="nav-item"><a class="nav-link" data-tab="body">Body</a></li>
                </ul>

                <!-- Contenu des onglets -->
                <div id="params" class="tab-content active">
                    <h6>Query Parameters</h6>
                    <table class="table table-sm" id="params-table">
                        <thead class="table-light"><tr><th><input type="checkbox" checked></th><th>Key</th><th>Value</th><th>Description</th><th></th></tr></thead>
                        <tbody></tbody>
                    </table>
                    <button class="btn btn-outline-secondary btn-sm" onclick="addRow('params-table')">+ Add Parameter</button>
                </div>

                <div id="authorization" class="tab-content">
                    <h6>Basic Auth</h6>
                    <div class="row g-3">
                        <div class="col-md-6"><label class="form-label">Username</label><input type="text" id="auth-user" class="form-control"></div>
                        <div class="col-md-6"><label class="form-label">Password</label><input type="password" id="auth-pass" class="form-control"></div>
                    </div>
                </div>

                <div id="headers" class="tab-content">
                    <h6>Headers</h6>
                    <table class="table table-sm" id="headers-table">
                        <thead class="table-light"><tr><th><input type="checkbox" checked></th><th>Key</th><th>Value</th><th>Description</th><th></th></tr></thead>
                        <tbody></tbody>
                    </table>
                    <button class="btn btn-outline-secondary btn-sm" onclick="addRow('headers-table')">+ Add Header</button>
                </div>

                <div id="body" class="tab-content">
                    <h6>Body</h6>
                    <select id="body-type" class="form-select w-auto mb-3">
                        <option value="none">none</option>
                        <option value="formdata">form-data</option>
                        <option value="urlencoded">x-www-form-urlencoded</option>
                        <option value="raw">raw (JSON)</option>
                    </select>

                    <div id="body-formdata">
                        <table class="table table-sm" id="formdata-table">
                            <thead class="table-light"><tr><th><input type="checkbox" checked></th><th>Key</th><th>Value</th><th></th></tr></thead>
                            <tbody></tbody>
                        </table>
                        <button class="btn btn-outline-secondary btn-sm" onclick="addRow('formdata-table')">+ Add</button>
                    </div>

                    <div id="body-urlencoded" style="display:none;">
                        <table class="table table-sm" id="urlencoded-table">
                            <thead class="table-light"><tr><th><input type="checkbox" checked></th><th>Key</th><th>Value</th><th></th></tr></thead>
                            <tbody></tbody>
                        </table>
                        <button class="btn btn-outline-secondary btn-sm" onclick="addRow('urlencoded-table')">+ Add</button>
                    </div>

                    <div id="body-raw" style="display:none;">
                        <textarea id="raw-body" class="form-control font-monospace" rows="12">{}</textarea>
                    </div>
                </div>
            </div>

            <!-- Partie Réponse (50%) -->
            <div class="response-panel p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Response</h5>
                    <div>
                        <span id="response-status" class="badge bg-secondary fs-6">Status: -</span>
                        <span id="response-time" class="ms-3 text-muted">Time: -</span>
                    </div>
                </div>
                <pre id="response-body" class="mb-3">Waiting for response...</pre>
                <details>
                    <summary class="text-muted cursor-pointer">Response Headers</summary>
                    <pre id="response-headers" class="mt-2"></pre>
                </details>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (pour les composants interactifs) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Gestion des onglets
    document.querySelectorAll('#requestTabs .nav-link').forEach(tab => {
        tab.addEventListener('click', (e) => {
            e.preventDefault();
            document.querySelectorAll('#requestTabs .nav-link').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            tab.classList.add('active');
            document.getElementById(tab.dataset.tab).classList.add('active');

            // Gestion affichage body
            const type = document.getElementById('body-type').value;
            document.getElementById('body-formdata').style.display = type === 'formdata' ? 'block' : 'none';
            document.getElementById('body-urlencoded').style.display = type === 'urlencoded' ? 'block' : 'none';
            document.getElementById('body-raw').style.display = type === 'raw' ? 'block' : 'none';
        });
    });

    document.getElementById('body-type').addEventListener('change', (e) => {
        const type = e.target.value;
        document.getElementById('body-formdata').style.display = type === 'formdata' ? 'block' : 'none';
        document.getElementById('body-urlencoded').style.display = type === 'urlencoded' ? 'block' : 'none';
        document.getElementById('body-raw').style.display = type === 'raw' ? 'block' : 'none';
    });

    function addRow(tableId) {
        const tbody = document.querySelector(`#${tableId} tbody`);
        const row = tbody.insertRow();
        const hasDesc = tableId.includes('params') || tableId.includes('headers');
        row.innerHTML = `
            <td><input type="checkbox" checked></td>
            <td><input type="text" class="form-control form-control-sm"></td>
            <td><input type="text" class="form-control form-control-sm"></td>
            ${hasDesc ? '<td><input type="text" class="form-control form-control-sm"></td>' : ''}
            <td><span class="remove-row" onclick="this.parentElement.parentElement.remove()">×</span></td>
        `;
    }

    function getMethodClass(method) {
        const map = { GET: 'get', POST: 'post', PUT: 'put', DELETE: 'delete', PATCH: 'patch' };
        return 'method-' + (map[method] || 'get').toLowerCase();
    }

    async function sendRequest() {
        const method = document.getElementById('method').value;
        let url = document.getElementById('url').value.trim();

        // Query params
        const params = new URLSearchParams();
        document.querySelectorAll('#params-table tbody tr').forEach(row => {
            const inputs = row.querySelectorAll('input');
            if (inputs[0].checked && inputs[1].value) {
                params.append(inputs[1].value, inputs[2].value);
            }
        });
        if (params.toString()) {
            url += (url.includes('?') ? '&' : '?') + params.toString();
        }

        // Headers
        const headers = new Headers();
        document.querySelectorAll('#headers-table tbody tr').forEach(row => {
            const inputs = row.querySelectorAll('input');
            if (inputs[0].checked && inputs[1].value) {
                headers.append(inputs[1].value, inputs[2].value);
            }
        });

        // Basic Auth
        const user = document.getElementById('auth-user').value;
        const pass = document.getElementById('auth-pass').value;
        if (user && pass) {
            headers.append('Authorization', 'Basic ' + btoa(user + ':' + pass));
        }

        // Body
        let body = null;
        const bodyType = document.getElementById('body-type').value;
        if (bodyType !== 'none' && ['POST', 'PUT', 'PATCH'].includes(method)) {
            if (bodyType === 'raw') {
                try { JSON.parse(document.getElementById('raw-body').value); } catch { }
                body = document.getElementById('raw-body').value;
                headers.set('Content-Type', 'application/json');
            } else if (bodyType === 'formdata') {
                const formData = new FormData();
                document.querySelectorAll('#formdata-table tbody tr').forEach(row => {
                    const inputs = row.querySelectorAll('input');
                    if (inputs[0].checked && inputs[1].value) {
                        formData.append(inputs[1].value, inputs[2].value);
                    }
                });
                body = formData;
            } else if (bodyType === 'urlencoded') {
                const data = new URLSearchParams();
                document.querySelectorAll('#urlencoded-table tbody tr').forEach(row => {
                    const inputs = row.querySelectorAll('input');
                    if (inputs[0].checked && inputs[1].value) {
                        data.append(inputs[1].value, inputs[2].value);
                    }
                });
                body = data;
                headers.set('Content-Type', 'application/x-www-form-urlencoded');
            }
        }

        const start = performance.now();
        try {
            const res = await fetch(url, { method, headers, body });
            const time = Math.round(performance.now() - start);

            document.getElementById('response-status').textContent = `Status: ${res.status} ${res.statusText}`;
            document.getElementById('response-status').className = `badge fs-6 ${res.ok ? 'bg-success' : 'bg-danger'}`;
            document.getElementById('response-time').textContent = `Time: ${time} ms`;

            // Headers
            let headersText = '';
            res.headers.forEach((val, key) => headersText += `${key}: ${val}\n`);
            document.getElementById('response-headers').textContent = headersText;

            // Body
            const contentType = res.headers.get('content-type') || '';
            let text = '';
            if (contentType.includes('application/json')) {
                const json = await res.clone().json();
                text = JSON.stringify(json, null, 2);
            } else {
                text = await res.text();
            }
            document.getElementById('response-body').textContent = text || '(no body)';

            // Historique
            addToHistory(method, url);
        } catch (err) {
            document.getElementById('response-body').textContent = 'Error: ' + err.message;
            document.getElementById('response-status').textContent = 'Error';
            document.getElementById('response-status').className = 'badge bg-danger fs-6';
        }
    }

    function addToHistory(method, url) {
        const div = document.createElement('div');
        div.className = 'history-item';
        div.innerHTML = `<span class="method ${getMethodClass(method)}">${method}</span> <small>${url}</small>`;
        div.onclick = () => {
            document.getElementById('method').value = method;
            document.getElementById('url').value = url;
        };
        document.getElementById('history').prepend(div);
    }

    document.getElementById('send-btn').addEventListener('click', sendRequest);

    // Fonctions placeholders pour tes API
    async function getUsers() {
        // Format attendu : { success: true, data: [{id:1, name:"..."}, ...] }
        return fetch('https://api.example.com/users').then(r => r.json());
    }

    async function createUser(userData) {
        // Format attendu : { success: true, data: {id: 42, ...} }
        return fetch('https://api.example.com/users', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify(userData)
        }).then(r => r.json());
    }
</script>
</body>
</html>